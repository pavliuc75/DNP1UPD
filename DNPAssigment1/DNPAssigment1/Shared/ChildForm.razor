@using DNPAssigment1.Models
<h3>Add child</h3>
<form>
    <div class="form-group">
        <label>Fist name: </label>
        <input class="input-group-text" @bind-value="Child.FirstName">
    </div>
    <div class="form-group">
            <label>Last name: </label>
            <input class="input-group-text" @bind-value="Child.LastName">
        </div>
    <div class="form-group">
        <label>Age: </label>
        <input class="input-group-text" @bind-value="Child.Age">
    </div>
    <div class="form-group">
        <label>ID: </label>
        <input class="input-group-text" @bind-value="Child.Id">
    </div>
    <div class="form-group">
        <label>Choose eye color: </label>
        <InputSelect @bind-Value="Child.EyeColor">
            @foreach (var color in Enum.GetValues(typeof(EyeColor))
                )
            { 
                <option value="@color">@color</option>
            }
        </InputSelect>
    </div>
    <div class="form-group">
            <label>Choose hair color: </label>
            <InputSelect @bind-Value="Child.HairColor">
                @foreach (var color in Enum.GetValues(typeof(HairColor)))
                { 
                    <option value="@color">@color</option>
                }
            </InputSelect>
        </div>
    <div class="form-group">
            <label>Weigh: </label>
            <input class="input-group-text" @bind-value="Child.Weight">
        </div>
    <button class="btn btn-primary" @onclick="saveChild">Save pet</button>
</form>


