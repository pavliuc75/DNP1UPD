@using DNPAssigment1.Models
<h3>Pet form</h3>
<form>
    <div class="form-group">
        <label>Species</label>
        <select>
            @foreach (PetSpecies petSpecies in (PetSpecies[]) Enum.GetValues(typeof(PetSpecies)))
            {
                <option>@petSpecies</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" placeholder="Name">
    </div>
    <div class="form-group">
        <label>Age</label>
        <input class="form-control" placeholder="Age">
    </div>
    <button class="btn btn-outline-dark btn-sm">Add PET</button>
</form>